<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ExpandButton">
        <attr name="icon" format="reference"/>
        <attr name="iconSize" format="dimension"/>
        <attr name="iconColor" format="color"/>
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="btnColor" format="color"/>
        <attr name="interval" format="dimension"/>
        <attr name="exIconGravity">
            <enum name="center" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="corner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ExpandButtonGroup">
        <attr name="selectedColor" format="color"/>
        <attr name="defaultColor" format="color"/>
        <attr name="textMaxLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TextIconExpandButton">
        <attr name="iconTextSize" format="dimension"/>
        <attr name="iconText" format="string"/>
    </declare-styleable>

</resources>