<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/bg_time_key">

    <TextView
        android:id="@+id/keyNameView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:textColor="@color/curtainText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/keyValueView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/app_name"
        android:textColor="@color/curtainTextSecondary"
        app:layout_constraintLeft_toLeftOf="@id/keyNameView"
        app:layout_constraintTop_toBottomOf="@id/keyNameView"
        app:layout_constraintRight_toRightOf="@id/keyNameView"
        android:gravity="end|top"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/keyPreviewView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/keyNameView"
        app:layout_constraintTop_toBottomOf="@id/keyValueView"
        app:layout_constraintRight_toRightOf="@id/keyNameView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="start|top"
        android:textColor="@color/curtainText"/>

</androidx.constraintlayout.widget.ConstraintLayout>