<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuickTimingActivity"
    android:id="@+id/rootGroup">

    <android.support.v7.widget.CardView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quietBtn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/infoBody"
        app:cardElevation="6dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.7">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_timing"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:id="@+id/timingNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/timing_name"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:transitionName="QUIET_BTN"
        android:id="@+id/quietBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_notifications_off_black_24dp"
        android:tint="@android:color/white"
        app:backgroundTint="#5f94a1"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/remindBtn"
        app:layout_constraintTop_toBottomOf="@id/infoBody" />

    <android.support.design.widget.FloatingActionButton
        android:transitionName="REMIND_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:id="@+id/remindBtn"
        android:src="@drawable/ic_notifications_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/quietBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/quietBtn"
        app:layout_constraintBottom_toBottomOf="@id/quietBtn"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/quietBtn"
        app:layout_constraintLeft_toLeftOf="@id/quietBtn"
        app:layout_constraintRight_toRightOf="@id/quietBtn"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiet"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/remindBtn"
        app:layout_constraintLeft_toLeftOf="@id/remindBtn"
        app:layout_constraintRight_toRightOf="@id/remindBtn"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remind"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>