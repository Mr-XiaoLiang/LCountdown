<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widgetGroup">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/backgroundImage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/nameLocationGroup"
        android:paddingBottom="50dp">
        <LinearLayout
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/prefixLocationGroup">
                <TextView
                    android:id="@+id/nameFrontView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/left_until"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:theme="@style/widgetText"/>
            </LinearLayout>

            <TextView
                android:theme="@style/widgetText"
                android:id="@+id/nameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/suffixLocationGroup">
                <TextView
                    android:id="@+id/nameBehindView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/the_end"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:theme="@style/widgetText"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/dayLocationGroup"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/dayGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom">
            <TextView
                android:id="@+id/dayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="34sp"
                android:text="0"
                android:textColor="@android:color/white"
                android:theme="@style/widgetText"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/unitLocationGroup">
                <TextView
                    android:id="@+id/dayUnitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/day"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:theme="@style/widgetText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/timeLocationGroup"
        android:paddingTop="50dp">
        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:text="12:34"
            android:textColor="@android:color/white"
            android:theme="@style/widgetText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/signLocationGroup"
        android:gravity="bottom|right">
        <TextView
            android:id="@+id/signView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:theme="@style/widgetText"/>
    </LinearLayout>

</FrameLayout>