<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WidgetAdjustmentActivity"
    android:id="@+id/rootGroup"
    android:background="@color/windowBackground">

    <ImageView
        android:id="@+id/fullBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="#3000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/widgetFrame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <include layout="@layout/widget_panel"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/sheetPanel"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/panelPager"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <liang.lollipop.ltabview.LTabView
            android:id="@+id/tabView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/sheetPanel"
        app:layout_constraintBottom_toTopOf="@id/sheetPanel"
        app:layout_constraintTop_toTopOf="@id/sheetPanel"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:icon="@drawable/ic_baseline_done_24"
        app:iconTint="@color/fabIcon"
        android:backgroundTint="@color/fabBackground"
        android:text="@string/save"
        android:textColor="@color/fabIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>